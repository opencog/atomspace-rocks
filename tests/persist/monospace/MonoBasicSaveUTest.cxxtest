void MonoBasicSaveUTest::test_single_atom(void)
{
    logger().debug("BEGIN TEST: %s", __FUNCTION__);

    // Trash the contents of the database.
    single_atom_save_restore("aaa ");
    single_atom_save_restore("bbb ");
    single_atom_save_restore("ccc ");
    single_atom_save_restore("ddd ");
    single_atom_save_restore("eee ");
    single_atom_save_restore("$$$ ");

    logger().debug("END TEST: %s", __FUNCTION__);
}

void MonoBasicSaveUTest::test_fresh_atom(void)
{
    logger().debug("BEGIN TEST: %s", __FUNCTION__);

    AtomSpacePtr as = createAtomSpace();
    Handle hsn = as->add_node(MONO_STORAGE_NODE, std::string(uri));
    StorageNodePtr store = StorageNodeCast(hsn);
    store->setValue(as->add_node(PREDICATE_NODE, "*-open-*"), createVoidValue());
    if (!store->connected())
    {
        logger().debug("test_fresh_atom: cannot connect to db");
        return;
    }

    Handle ha = as->add_node(CONCEPT_NODE, "electrical");
    Handle hb = as->add_node(CONCEPT_NODE, "energy");

    // Store a ListLink with stuff in it.
    Handle lf = as->add_link(LIST_LINK, ha, hb);
    lf->setValue(truth_key(), createFloatValue(std::vector<double>({0.55, 0.6})));
    store->store_atom(lf);

    // Store an empty ListLink.
    Handle le = as->add_link(LIST_LINK);
    le->setValue(truth_key(), createFloatValue(std::vector<double>({0.1, 0.9})));
    store->store_atom(le);
    store->barrier();

    // Now get them back.  Get empty after full.
    Handle hf = as->add_link(LIST_LINK, ha, hb);
    store->fetch_atom(hf);
    atomCompare(lf, hf, "Fully Fresh");

    Handle he = as->add_link(LIST_LINK);
    store->fetch_atom(he);

    printf("Expecting %s\n", le->to_string().c_str());

    if (he) printf("Got %s\n", he->to_string().c_str());
    atomCompare(le, he, "Empty Fresh");

    store->erase();

    logger().debug("END TEST: %s", __FUNCTION__);
}

void MonoBasicSaveUTest::test_table()
{
    logger().debug("BEGIN TEST: %s", __FUNCTION__);

    AtomSpacePtr as1 = createAtomSpace();
    Handle hsn = as1->add_node(MONO_STORAGE_NODE, std::string(uri));
    StorageNodePtr store = StorageNodeCast(hsn);
    store->setValue(as1->add_node(PREDICATE_NODE, "*-open-*"), createVoidValue());
    if (!store->connected())
    {
        logger().debug("test_table: cannot connect to db");
        return;
    }

    int idx = 0;
    add_to_table(idx++, as1.get(), "AA-aa-wow ");
    add_to_table(idx++, as1.get(), "BB-bb-wow ");
    add_to_table(idx++, as1.get(), "CC-cc-wow ");
    add_to_table(idx++, as1.get(), "DD-dd-wow ");
    add_to_table(idx++, as1.get(), "EE-ee-wow ");

    store->store_atomspace();
    // Subtract 2 for the MonoStorageNode and *-open-* PredicateNode
    size_t num_stored = as1->get_size() - 2;
#ifdef DOPRT
    HandleSeq hset;
    as1->get_handles_by_type(hset, ATOM, true, false);
    for (auto h: hset) {
        printf("Store table has %s\n", h->to_string().c_str());
    }
#endif

    printf("Done storing table; size=%lu\n", num_stored);

    // Clobber as1 to close storage.
    as1 = nullptr;

    // Reopen connection, and load the atom table.
    AtomSpacePtr as2 = createAtomSpace();
    hsn = as2->add_node(MONO_STORAGE_NODE, std::string(uri));
    store = StorageNodeCast(hsn);
    store->setValue(as2->add_node(PREDICATE_NODE, "*-open-*"), createVoidValue());
    TSM_ASSERT("Not connected to database", store->connected());

    store->load_atomspace();
    store->barrier();
    // Subtract 2 for the MonoStorageNode and *-open-* PredicateNode
    size_t num_fetched = as2->get_size() - 2;
    printf("test_table: Done loading table; fetched %lu, expected %lu\n",
           num_fetched, num_stored);
    // Two extra, for (PredicateNode "*-TruthValueKey-*")
    // and (PredicateNode "*-IsKeyFlag-*")
    TSM_ASSERT("Wrong number of atoms fetched", num_fetched == num_stored+2);

    idx = 0;
    check_table(idx++, as2.get(), "aaa ");
    check_table(idx++, as2.get(), "bbb ");
    check_table(idx++, as2.get(), "ccc ");
    check_table(idx++, as2.get(), "ddd ");
    check_table(idx++, as2.get(), "eee ");

    store->erase();

    logger().debug("END TEST: %s", __FUNCTION__);
}

