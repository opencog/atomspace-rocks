class MonoBasicSaveUTest :  public CxxTest::TestSuite
{
    private:
        std::string uri;

        Handle n1[10];
        Handle n2[10];
        Handle n3[10];
        Handle n4[10];
        Handle   l[10];
        Handle a1[10];
        Handle a2[10];
        Handle a3[10];
        Handle a4[10];
        Handle al[10];

    public:

        MonoBasicSaveUTest(void)
        {
            logger().set_level(Logger::INFO);
            // logger().set_level(Logger::DEBUG);
            logger().set_print_to_stdout_flag(true);

            uri = "monospace:///tmp/cog-mono-basic-save-utest";
        }

        ~MonoBasicSaveUTest()
        {
            // erase the log file if no assertions failed
            if (!CxxTest::TestTracker::tracker().suiteFailed())
            {
                std::remove(logger().get_filename().c_str());
                // Also remove the database directory
                // URI is "monospace:///tmp/..." so path starts at position 12
                std::string dbpath = uri.substr(12);
                std::filesystem::remove_all(dbpath);
            }
        }

        void setUp(void);
        void tearDown(void);

        void single_atom_save_restore(std::string id);
        void add_to_table(int, AtomSpace*, std::string id);
        void check_table(int, AtomSpace*, std::string id);

        void test_single_atom(void);
        void test_fresh_atom(void);
        void test_table(void);
};

