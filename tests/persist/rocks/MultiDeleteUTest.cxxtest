using namespace opencog;

class MultiDeleteUTest :  public CxxTest::TestSuite
{
	private:
		std::string uri;
		AtomSpacePtr as;
		StorageNodePtr store;

	public:

		MultiDeleteUTest(void)
		{
			logger().set_level(Logger::INFO);
			// logger().set_level(Logger::DEBUG);
			logger().set_print_to_stdout_flag(true);

			uri = "rocks:///tmp/cog-rocks-multi-delete-utest";
		}

		~MultiDeleteUTest()
		{
			// erase the log file if no assertions failed
			if (!CxxTest::TestTracker::tracker().suiteFailed())
			{
				std::remove(logger().get_filename().c_str());
				// Also remove the database directory
				// URI is "rocks:///tmp/..." so path starts at position 8
				std::string dbpath = uri.substr(8);
				std::filesystem::remove_all(dbpath);
			}
		}

		void setUp(void);
		void tearDown(void);

		void worker(int);
		void test_add_delete(void);
};

/*
 * This is called once before each test, for each test (!!)
 */
void MultiDeleteUTest::setUp(void)
{
}

void MultiDeleteUTest::tearDown(void)
{
}

// ============================================================

// Add and then remove a bunch of links.
// This is designed so that multiple threads will be
// touching the same atoms, adding and removing the same atoms.
// This should not cause any failures or crashes.
void MultiDeleteUTest::worker(int thread_id)
{
	int nloops = 50;
	int nsplice = 50;

	Handle ha(as->add_node(CONCEPT_NODE, "a"));

	for (int j=0; j<nsplice; j++)
	{
		for (int i=0; i<nloops; i++)
		{
			int id = (thread_id + i) % (thread_id + 7);
			Handle hb(as->add_node(CONCEPT_NODE, std::to_string(id)));
			Handle li(as->add_link(LIST_LINK, {ha, hb, ha, hb}));

			// Store the link.
			store->store_atom(li);
		}

		for (int i=0; i<nloops; i++)
		{
			int id = (thread_id + i) % (thread_id + 7);
			Handle hb(as->get_node(CONCEPT_NODE, std::to_string(id)));
			Handle li(as->get_link(LIST_LINK, {ha, hb, ha, hb}));

			// If it's already gone, do nothing.
			if (nullptr == li) continue;

			// Remove the link.
			store->remove_atom(as, li);
		}
	}

	// Just one barrier, at the end.
	store->barrier();
}

// ============================================================

void MultiDeleteUTest::test_add_delete(void)
{
	logger().debug("BEGIN TEST: %s", __FUNCTION__);

	// Configuration. Number of actual running threads may be less,
	// depending on the CPU architecture.
	int n_threads = 10;

	as = createAtomSpace();

	Handle hsn = as->add_node(ROCKS_STORAGE_NODE, std::string(uri));
	store = StorageNodeCast(hsn);

	store->open();
	TS_ASSERT(store->connected())

	// Clear out left-over junk, just in case.
	store->erase();

	printf("Start creating %d threads\n", n_threads);

	std::vector<std::thread> thread_pool;
	for (int i=0; i < n_threads; i++) {
		thread_pool.push_back(
			std::thread(&MultiDeleteUTest::worker, this, i));
	}

	for (std::thread& t : thread_pool) t.join();
	printf("Done joining threads\n");

	printf("Post-update AtomSpace size=%lu\n", as->get_size());
	// printf("AtomSpace contents =\n%s\n", as->to_string().c_str());

	// Verify the local AtomSpace size. Should be 34:
	// The StorageNode itself, the (Concept "aaaa") and
	// 16 Concept and Lists from thread-id modulo 16
	TS_ASSERT_EQUALS(as->get_size(), 2 + 2*(n_threads+6));

	// Verify the DB contents: pull everything from the DB,
	// back to here. Do this "independently", by closing and
	// reopening; this forces the Storagenode through assorted
	// flush and close code, potentially exposing bugs.
	store->close();

	HandleSeq hs;
	as->get_handles_by_type(hs, CONCEPT_NODE);
	for (const Handle& h : hs)
		as->extract_atom(h, true);
	hs.clear();
	printf("AtomSpace contents =\n%s\n", as->to_string().c_str());
	TS_ASSERT_EQUALS(as->get_size(), 1);

	store->open();
	TS_ASSERT(store->connected())

	store->load_atomspace();
	printf("Final AtomSpace size=%lu\n", as->get_size());

	// Size should be 19: the 18 from before plus that annoying
	// (Predicate "*-TruthValueKey-*")
	size_t expected_size = 3 + n_threads + 6;
	if (as->get_size() != expected_size)
		printf("Error: Bad size! AtomSpace contents =\n%s\n",
			as->to_string().c_str());

	TS_ASSERT_EQUALS(as->get_size(), expected_size);

	store->erase();
	store->close();
	store = nullptr;

	logger().debug("END TEST: %s", __FUNCTION__);
}

